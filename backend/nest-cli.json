{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "backend/src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "tsConfigPath": "tsconfig.json",
    "assets": ["**/*.graphql"],
    "builder": {
      "type": "tsc",
      "options": {
        "outputPath": "dist/backend"
      }
    }
  }
}
